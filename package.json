    "name": "r3-water-sample-puzzle",
    "appName": "R3 Water Sample Puzzle",
    "description": "This is a nw version of water sample - a classic puzzle from a survivor horror game, created using TMS.js and TS",
    "window": {
        "width": 390,
        "height": 280,
        "frame": true,
        "toolbar": false,
        "min_width": 390,
        "min_height": 280,
        "max_width": 390,
        "max_height": 280,
        "fullscreen": false,
        "transparent": false,
        "position": "center",
        "theme-color": "#002",
        "icon": "App/img/icon.png",
        "title": "R3 Water Sample Puzzle - Please wait..."
    },
    "scripts": {
        "dev": "nw -dev",
        "compileTs": "tsc",
        "test": "echo \"Error: no test specified\" && exit 1",
        "build-debug": "node ./compiler/comp-nw.js --platform=win64,linux64 --flavor=sdk --nwVersion=0.77.0",
        "build-main": "node ./compiler/comp-nw.js --platform=win64,linux64 --flavor=normal --nwVersion=0.77.0",
        "prepFiles": "node ./compiler/comp-prepFiles.js --mainJs=app.js --copyFolders=img,tools,forms,node_modules --exportJsSample=!1 --cssMinifyLevel=2 --jsBeforeMain=systemjs.js,named-register.min.js"
    },
    "dependencies": {
        "nw": "^0.77.0-sdk"
    },
    "devDependencies": {
        "clean-css": "^5.3.2",
        "uglify-js": "^3.17.4",
        "nw-builder": "^3.5.7",
        "typescript": "^5.1.3",
        "@types/node": "^20.3.1",
        "html-minifier": "^4.0.0"
    }
}
